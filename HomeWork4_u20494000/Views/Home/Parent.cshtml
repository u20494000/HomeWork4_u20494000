@model IEnumerable<HomeWork4_u20494000.Models.Parent>
@{
    ViewBag.Title = "Parent";
}

<h2>PARENT/GUARDIAN:</h2>

<div class="container-fluid">
    <div class="row">
        <div class=" col-lg-10 col-sm-10 col-xs-10">
            <h2>Register parent/guardian details</h2>
            

        </div>
    </div>

    <div class="form-group">
        @using (Html.BeginForm("AddParent", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <div class=" col-lg-10 col-sm-10 col-xs-10 form-group">
                    <h2>Register parent details:</h2>
                    <br />

                    <lable>Name:</lable>
                    <input type="text" class="form-control" id="Name" name="Name" />

                    <lable>Surname:</lable>
                    <input type="text" class="form-control" id="Surname" name="Surname" />

                    <lable>Cellphone:</lable>
                    <input type="text" class="form-control" id="CellPhone" name="CellPhone" />

                    <lable>Age:</lable>
                    <input type="text" class="form-control" id="Age" name="Age" />

                    <lable>Email:</lable>
                    <input type="text" class="form-control" id="Email" name="Email" />

                    <lable>Address:</lable>
                    <input type="text" class="form-control" id="Address" name="Address" />
                    <br />
                    <button class="btn-primary" onclick="window.location.href = '@Url.Action("AddParent", "Home")'">Add Parent</button>
                </div>
            </div>
        }

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Age</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.FirstName</td>
                        <td>@x.LastName</td>
                        <td>@x.PhoneNumber</td>
                        <td>@x.Age</td>
                        <td>@x.Email</td>
                        <td>@x.Address</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>

